@model CooksCorner.Models.Genre

@{
    ViewBag.Title = "Browse";
}

<div class="action-content">
    <h4 class="align-center">Category: @Model.Name</h4>
    <h4 class="small">This Category has total @Model.WrittenTutorials.Count() Tutorials</h4>
    <div class="horizontal-space-small"></div>
    <ul>
        @foreach (var tutorial in Model.WrittenTutorials)
        { 
            <li><h5>@Html.ActionLink(tutorial.Title, "WrittenDetail", new { id=tutorial.Id })</h5></li>
        
        }
    </ul>
</div>
