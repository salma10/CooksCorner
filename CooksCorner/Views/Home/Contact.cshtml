@model CooksCorner.Models.Email
@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        if ('@ViewBag.Message' == 'sent') {
            document.getElementById("SenderMail").value = '';
            document.getElementById("Body").value = '';
            document.getElementById("Subject").value = '';
            alert('Mail has been sent successfully');
        } else if ('@ViewBag.Message' == 'fail') {
            alert('Sending Mail has been failed');
        }
    });
</script>

<div class="action-content">
    <div class="row">
        <div class="col-md-4">
            <h4 class="align-center" style="margin-bottom:20px;">Contact informations</h4>
            <div class="col-md-6">
            <h5 class="align-center" style="margin-bottom:10px; font-weight: bold;">Mobile No</h5>
            <p>0272934720937402</p>
            <p>0272934720937402</p>
            <p>0272934720937402</p>
            </div>
            <div class="col-md-6">
            <h5 class="align-center" style="margin-bottom:10px; font-weight: bold;">Email Address</h5>
            <p>cookscornerbd@gmail.com</p>
            <p>salma.cse10@gmail.com</p>
            <p>mouree2011@gmail.com</p>
            </div>
        </div>
        <div class="col-md-1"><hr width="2" size="500" style="color: green; height:auto;"></div>
        <div class="col-md-7">
            <h4 class="align-center" style="margin-bottom:20px;">Send us mail </h4>

            @using (@Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "contact" }))
            {
           
                <div class="form-group">
                    <label for="To" class="col-sm-2 control-label">Your Email &nbsp;<i class="fa fa-envelope fa-lg"></i> </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.SenderMail, new { placeholder = "email", type = "email", required = true, @class = "input-box" })
                    </div>
                </div>
                       
                <div class="form-group">
                    <label for="To" class="col-sm-2 control-label">Subject</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Subject, new { placeholder = "subject", required = true, @class = "input-box " })
                    </div>
                </div>
            
                <div class="form-group">
                    <label for="To" class="col-sm-2 control-label">Body</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Body, new { placeholder = "body", required = true, rows = 5, cols = 60, @class = "input-box" })
                    </div>
                </div>
               
            
                <div class="form-group">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-10">
                        <input class="btn btn-success" data-type="submit" type="submit" value="Send" />
                    </div>
                </div>
                    
            }
        </div>


    </div>
</div>
